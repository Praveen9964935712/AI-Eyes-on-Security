# Environment variables for AI Eyes Security System
# Copy this file to .env and update with your MongoDB Atlas connection string

# MongoDB Atlas Connection (replace with your actual connection string)
# MONGODB_URL=mongodb+srv://ai_eyes_user:YOUR_PASSWORD@cluster0.xxxxx.mongodb.net/ai_eyes_security?retryWrites=true&w=majority
MONGODB_URL=mongodb://localhost:27017/

# Database name
DATABASE_NAME=ai_eyes_security

# Flask settings
SECRET_KEY=dev-secret-key-change-in-production
DEBUG=true

# Storage settings
STORAGE_PATH=./storage
MAX_FILE_AGE_DAYS=30
MAX_STORAGE_SIZE_MB=1000